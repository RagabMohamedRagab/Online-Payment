@model Amount;
@{
    ViewData["Title"] = "Stripe";
}
<h1>Stripe GateWay Payment Online</h1>

<section class="col-md-6">
    <form asp-controller="Home" asp-action="CreateCheckOutSession" asp-antiforgery="true">
         <div asp-validation-summary="All" class="text-danger" ></div>
         <div class="form-group">
             <label asp-for="TotalPrice" class="form-label"></label>
             <input asp-for="TotalPrice" class="form-control"/>
            <span asp-validation-for="TotalPrice" class="text-danger"></span>
         </div>
         <div class="form-group mt-4">
             <input type="submit" value="CheckOut" class="btn btn-success"/>
         </div>
    </form>
</section>

@section  Scripts{
    <partial name="_ValidationScriptsPartial" />
}